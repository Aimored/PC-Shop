@{
    ViewData["Title"] = "Главная";
}

<!-- 🔹 БАННЕР-СЛАЙДЕР -->
<div id="mainCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/banner1.jpg" class="d-block w-100" alt="Баннер 1">
        </div>
        <div class="carousel-item">
            <img src="/images/banner2.jpg" class="d-block w-100" alt="Баннер 2">
        </div>
        <div class="carousel-item">
            <img src="/images/banner3.jpg" class="d-block w-100" alt="Баннер 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- 🔹 КАТЕГОРИИ -->
<div class="categories mt-5">
    <h3 class="mb-3">Категории</h3>
    <div class="row text-center">
        <div class="col-6 col-md-3 mb-4">
            <a href="/Catalog?typeId=1" class="text-decoration-none text-dark">
                <img src="/images/icons/cpu.png" width="64" height="64" alt="Процессоры" />
                <p class="mt-2">Процессоры</p>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <a href="/Catalog?typeId=2" class="text-decoration-none text-dark">
                <img src="/images/icons/gpu.png" width="64" height="64" alt="Видеокарты" />
                <p class="mt-2">Видеокарты</p>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <a href="/Catalog?typeId=3" class="text-decoration-none text-dark">
                <img src="/images/icons/motherboard.png" width="64" height="64" alt="Материнские платы" />
                <p class="mt-2">Материнские платы</p>
            </a>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <a href="/Catalog?typeId=4" class="text-decoration-none text-dark">
                <img src="/images/icons/ram.png" width="64" height="64" alt="Оперативная память" />
                <p class="mt-2">Оперативная память</p>
            </a>
        </div>
    </div>
</div>

<div class="popular mt-5">
    <h3 class="mb-3">Популярные товары</h3>
    <div class="row">
        @foreach (var product in ViewBag.PopularProducts)
        {
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price ₽</p>
                            <button class="btn btn-primary mt-auto" type="button">Подробнее</button>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>